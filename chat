  <script>
    function showPage(pageId) {
      document.querySelectorAll('.page').forEach(page => page.classList.add('hidden'));
      document.getElementById(pageId).classList.remove('hidden');
    }

    function loadStorage() {
      const tasks = JSON.parse(localStorage.getItem('tasks') || '[]');
      const notes = JSON.parse(localStorage.getItem('notes') || '[]');
      tasks.forEach(t => addTaskToDOM(t.text, t.done));
      notes.forEach(n => addNoteToDOM(n));
    }

    function addTask() {
      const input = document.getElementById('newTask');
      const text = input.value.trim();
      if (!text) return;
      addTaskToDOM(text, false);
      saveTask(text, false);
      input.value = '';
    }

    function addTaskToDOM(text, done) {
      const li = document.createElement('li');
      const checkbox = document.createElement('input');
      checkbox.type = 'checkbox';
      checkbox.checked = done;
      const span = document.createElement('span');
      span.textContent = text;
      if (done) span.style.textDecoration = 'line-through';
      checkbox.onchange = () => toggleTask(text, checkbox.checked, span);
      li.appendChild(checkbox);
      li.appendChild(span);
      document.getElementById('taskList').appendChild(li);
    }

    function saveTask(text, done) {
      const tasks = JSON.parse(localStorage.getItem('tasks') || '[]');
      tasks.push({ text, done });
      localStorage.setItem('tasks', JSON.stringify(tasks));
    }

    function toggleTask(text, done, span) {
      const tasks = JSON.parse(localStorage.getItem('tasks') || '[]');
      const updated = tasks.map(t => t.text === text ? { text, done } : t);
      localStorage.setItem('tasks', JSON.stringify(updated));
      span.style.textDecoration = done ? 'line-through' : 'none';
    }

    function addNote() {
      const text = document.getElementById('noteText').value.trim();
      if (!text) return;
      addNoteToDOM(text);
      const notes = JSON.parse(localStorage.getItem('notes') || '[]');
      notes.push(text);
      localStorage.setItem('notes', JSON.stringify(notes));
      document.getElementById('noteText').value = '';
    }

    function addNoteToDOM(note) {
      const li = document.createElement('li');
      li.textContent = note;
      li.onclick = () => {
        li.remove();
        removeNote(note);
      };
      document.getElementById('noteList').appendChild(li);
    }

    function removeNote(note) {
      let notes = JSON.parse(localStorage.getItem('notes') || '[]');
      notes = notes.filter(n => n !== note);
      localStorage.setItem('notes', JSON.stringify(notes));
    }

    loadStorage();
  </script>
</body>
